@model aspprvi.Models.Blog_Post

@{
    ViewData["Title"] = "Create Blog Post";
}

<div class="container mt-4">
    <h1>Create New Post</h1>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" value="@Model.title" required />
        </div>

        <div class="form-group mt-3">
            <label for="content">Content</label>
            <textarea class="form-control" id="content" name="content" rows="6" required>@Model.content</textarea>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Create Post</button>
            <a href="@Url.Action("Index", "Blog")" class="btn btn-secondary ml-2">Back to Posts</a>
        </div>
    </form>
</div>
