@model aspprvi.Models.Blog_Post

@{
    ViewData["Title"] = Model.title;
}

<div class="container mt-4">
    <h1>@Model.title</h1>
    <p><strong>Created at:</strong> @Model.created_at.ToString("MMMM dd, yyyy")</p>
    <p><strong>Last updated:</strong> @Model.updated_at.ToString("MMMM dd, yyyy")</p>

    <div class="mt-4">
        <p>@Model.content</p>
    </div>

    <div class="mt-4">
        <a href="@Url.Action("Edit", "Blog", new { id = Model.id })" class="btn btn-warning">Edit</a>
        <a href="@Url.Action("Index", "Blog")" class="btn btn-secondary">Back to Posts</a>
    </div>
</div>
