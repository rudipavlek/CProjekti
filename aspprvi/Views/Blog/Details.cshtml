@model aspprvi.Models.BlogPostDetailsViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.BlogPost.title - Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-pzjw8f+ua7Kw1TIq0G6JzqkK+X6l9IKjZtG1tLxa4gxe0rdwZ8+oPtFfo1yP2Lvp" crossorigin="anonymous" />

    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        h1 {
            color: #007bff;
            text-align: center;
            margin-top: 20px;
            font-weight: bold;
        }

        .container {
            max-width: 800px;
            margin: auto;
            background: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .content {
            margin-top: 20px;
            font-size: 1.1rem;
            color: #333;
            line-height: 1.6;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 1rem;
            text-decoration: none;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .btn-warning {
            background-color: #ffc107;
            color: #212529;
        }

            .btn-warning:hover {
                background-color: #e0a800;
                transform: scale(1.05);
            }

        .btn-red {
            background-color: #FF4500;
            color: #212529;
        }

            .btn-red:hover {
                background-color: #FF6347;
                transform: scale(1.05);
            }

        .btn-secondary {
            background-color: #6c757d;
            color: #fff;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                transform: scale(1.05);
            }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1>@Model.BlogPost.title</h1>
        <p><strong>Created at:</strong> @Model.BlogPost.created_at.ToString("MMMM dd, yyyy")</p>
        <p><strong>Last updated:</strong> @Model.BlogPost.updated_at.ToString("MMMM dd, yyyy")</p>

        <div class="content">
            <p>@Model.BlogPost.content</p>
            <p><strong>Author:</strong> @Model.BlogPost.user_id</p>
        </div>

        

        <!-- Action Buttons -->
        <div class="mt-4 text-center">
            <a href="@Url.Action("Edit", "Blog", new { id = Model.BlogPost.id })" class="btn btn-warning">Edit</a>
            <a href="@Url.Action("Index", "Blog")" class="btn btn-secondary">Back to Posts</a>
            <a href="@Url.Action("Delete", "Blog", new { id = Model.BlogPost.id })" class="btn btn-red">Delete</a>
        </div>

        <!-- Display Comments -->
        <div class="mt-4">
            <h3>Comments</h3>
            @if (Model.Comments.Any())
            {
                <ul class="list-group">
                    @foreach (var comment in Model.Comments)
                    {
                        <li class="list-group-item">
                            <p>@comment.content</p>
                            <small class="text-muted">Posted by user @comment.user_id on @comment.created_at.ToString("MMMM dd, yyyy")</small>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">No comments yet. Be the first to comment!</p>
            }
        </div>
    </div>
</body>
</html>
