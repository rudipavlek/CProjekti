<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blog</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-pzjw8f+ua7Kw1TIq0G6JzqkK+X6l9IKjZtG1tLxa4gxe0rdwZ8+oPtFfo1yP2Lvp" crossorigin="anonymous" />

    <style>
        /* Osnovni stilovi */
        body {
            background-color: #f8f9fa;
        }

        h1 {
            color: #007bff;
            text-align: center;
            margin-top: 20px;
        }

        .search-form {
            display: flex;
            justify-content: center;
            margin-bottom: 30px;
        }

        .form-control {
            max-width: 300px;
        }

        .btn-search {
            width: auto;
        }

        .card {
            border: none;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .card-title {
            font-size: 1.25rem;
            color: #007bff;
        }

        .card-text {
            font-size: 1rem;
            color: #555;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1>@ViewData["Title"]</h1>

        <!-- Pretraga -->
        <form class="search-form" method="get">
            <input type="text" class="form-control" name="searchTitle" placeholder="Search by title" value="@ViewData["SearchTitle"]" />
            <button type="submit" class="btn btn-primary btn-search ml-2">Search</button>
        </form>

        <!-- List of blog posts -->
        <div class="row">
            @foreach (var post in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@post.Title</h5>
                            <p class="card-text">@post.Content.Substring(0, Math.Min(post.Content.Length, 100))...</p>
                            <a href="@Url.Action("Details", "Blog", new { id = post.Id })" class="btn btn-primary">Read More</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
