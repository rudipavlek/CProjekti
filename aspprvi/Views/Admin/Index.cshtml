@{
    ViewBag.Title = "Administracija korisnika";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Dodatni stilovi -->
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        h2 {
            text-align: center;
            margin-top: 30px;
            color: #007bff;
        }

        .table th, .table td {
            text-align: center;
            vertical-align: middle;
        }

        .table-container {
            margin-top: 30px;
        }

        .btn {
            margin-top: 10px;
        }

        .table {
            width: 100%;
        }

        .action-links a {
            margin-right: 10px;
            text-decoration: none;
        }

            .action-links a.btn {
                margin-top: 5px;
                padding: 6px 12px;
                border-radius: 5px;
            }

        .btn-edit {
            background-color: #ffc107;
            color: white;
        }

        .btn-delete {
            background-color: #dc3545;
            color: white;
        }

        .btn:hover {
            opacity: 0.9;
        }
    </style>
</head>
<body>

    <div class="container mt-4">
        <h2>@ViewBag.Title</h2>

        <!-- Gumb za dodavanje novog korisnika -->
        <div class="text-center mb-4">
            <a href="@Url.Action("Create", "Admin")" class="btn btn-success">Dodaj novog korisnika</a>
        </div>
        <div class="mt-4">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg mx-2">Početna stranica</a>
        </div>
        <!-- Lista korisnika -->
        <div class="table-container">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Akcija</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.username</td>
                            <td>@user.email</td>
                            <td class="action-links">
                                <a href="@Url.Action("Edit", "Admin", new { id = user.id })" class="btn btn-edit">Edit</a> |
                                <a href="@Url.Action("Delete", "Admin", new { id = user.id })" class="btn btn-delete">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
